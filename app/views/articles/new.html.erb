<h1>Create a new article</h1>

<% if @article.errors.any? %>
<h2>The follow errors prevented the article from saving</h2>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li> <%= msg %> </li>
    <% end %>
  </ul>
<% end %>

<%= render 'form' %>

<%= link_to 'Return to articles listing', articles_path %>